{
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        }
      },
      "required": ["displayName", "email"]
    },
    "exerciseResult": {
      "title": "Exercise Result",
      "description": "Stores the result of a user completing an exercise set.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "exerciseSlug": {
          "type": "string"
        },
        "score": {
          "type": "number"
        },
        "totalQuestions": {
          "type": "number"
        },
        "percentage": {
          "type": "number"
        },
        "completedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["userId", "exerciseSlug", "score", "totalQuestions", "percentage", "completedAt"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/userProfile"
      },
      "description": "Stores public profile information for users."
    },
    "/users/{userId}/exerciseResults/{resultId}": {
      "schema": {
        "$ref": "#/entities/exerciseResult"
      },
      "description": "Stores the results of exercises completed by a user."
    }
  }
}
